<div class="jumbotron">
	<h1>
		<span class="blue mainheading">
			<%= t('privacy.title') %>
		</span>
	</h1>
</div>

<div class="col-md-3">
	<section class="scorecard">
		<h2><%= t('dates.jul') %> 2012 – <%= t('dates.jun') %> 2014</h2>
		<dl>
			<dt><%= t('privacy.total_number_of_requests') %></dt>
			<dd>56</dd>
		</dl>
	</section>

	<section class="scorecard scorecard_bottom">
		<h2><%= t('dates.jul') %> 2012 – <%= t('dates.jun') %> 2014</h2>
		<dl>
			<dt><%= t('privacy.percentage_of_times_information_produced') %></dt>
			<dd>14<small>%</small></dd>
		</dl>
	</section>

</div>

<div class="col-md-8">
	<p class="lead">
		<%= t('privacy.lead') %>
	</p>

	<%= t('privacy.intro') %>

	<blockquote>
		<p><%= t('privacy.quote') %></p>
		<footer>
			<a href="//commons.wikimedia.org/wiki/File:Niels_Bohr.jpg"><img src="/images/quote_bohr.png"></a>
			<p><%= t('privacy.cite') %></p>
		</footer>
	</blockquote>

	<div id="summary_table" class="story">
		<h3>
			<small><%= t('dates.jul') %> 2012 – <%= t('dates.jun') %> 2014</small><br />
			<%= t('privacy.summary') %>
		</h3>
		<hr />
		<table>
			<tr>
				<td><%= t('privacy.total_number_of_requests') %></td>
				<td>56</td>
			</tr>
			<tr>
				<td class="indent"><a href="/faq.html#informal_non_government_requests"><%= t('privacy.informal_non_govt') %></td>
				<td>28</td>
			</tr>
			<tr>
				<td class="indent"><a href="/faq.html#informal_government_requests"><%= t('privacy.informal_govt') %></a></td>
				<td>15</td>
			</tr>
			<tr>
				<td class="indent"><a href="/faq.html#civil_subpoena"><%= t('privacy.civil_subpoenas') %></a></td>
				<td>8</td>
			</tr>
			<tr>
				<td class="indent"><a href="/faq.html#criminal_subpoena"><%= t('privacy.criminal_subpoenas') %></a></td>
				<td>5</td>
			</tr>
			<tr>
				<td class="indent"><a href="//en.wikipedia.org/wiki/Administrative_subpoena"><%= t('privacy.administrative_subpoenas') %></a></td>
				<td>0</td>
			</tr>
			<tr>
				<td class="indent"><a href="/faq.html#search_warrant"><%= t('privacy.search_warrants') %></a></td>
				<td>0</td>
			</tr>
			<tr class="last">
				<td class="indent"><a href="/faq.html#court_order"><%= t('privacy.court_orders') %></a></td>
				<td>0</td>
			</tr>
			<tr>
				<td><%= t('privacy.information_produced') %></td>
				<td>8</td>
			</tr>
			<tr>
				<td><%= t('privacy.user_potentially_affected') %></td>
				<td>69</td>
			</tr>
			<tr>
				<td><%= t('privacy.user_actually_affected') %></td>
				<td>11</td>
			</tr>
		</table>
	</div>
</div>

<div class="col-md-12">
	<div class="analytics">
		<h2><%= t('privacy.compared_to_others') %>*</h2>
		<ul class="tabs">
			<li><a id="bubble_graph_jul12jun13" class="bubble_graph_tabs active" href="javascript: void(0);"><%= t('dates.jul') %> 2012 - <%= t('dates.jun') %> 2013</a></li>
		</ul>
		<div id="compare_graph" class="bubble_graph"></div>
		<div class="legends">
			<div>
				<span class="total_requests_circle"></span><p><%= t('privacy.total_requests') %></p>
			</div>
			<div>
				<span class="complied_requests_circle"></span><p><%= t('privacy.information_was_produced') %></p>
			</div>
			<div class="fineprint">
				<h2>*</h2><p><%= t('privacy.bubble_graph_fineprint') %></p>
			</div>
		</div>
	</div>

</div>
<div class="clear"></div>

<div class="col-md-12">
	<div class="analytics">
		<h2><%= t('privacy.request_response') %></h2>
		<ul class="tabs">
			<li><a id="user_data_all" class="user_data_tabs" href="javascript: void(0);"><%= t('dates.all') %></a></li>
			<li><a id="user_data_jul12jun13" class="user_data_tabs active" href="javascript: void(0);"><%= t('dates.jul') %> 2012 - <%= t('dates.jun') %> 2013</a></li>
			<li><a id="user_data_juldec13" class="user_data_tabs"  href="javascript: void(0);"><%= t('dates.jul') %> - <%= t('dates.dec') %> 2013</a></li>
			<li><a id="user_data_janjun14" class="user_data_tabs" href="javascript: void(0);"><%= t('dates.jan') %> - <%= t('dates.jun') %> 2014</a></li>
		</ul>
		<div class="graph">
			<div class="row">
				<div class="col-md-4">
					<h3><%= t('privacy.request_type') %><a id="request_type_show_all" href="javascript: void(0)" class="disabled"><%= t('privacy.show_all') %></a></h3>
					<div id="bar_graph_by_type" class="bar_graph_horizontal"></div>
					<h3><%= t('privacy.information_produced_title') %></h3>
					<div>
						<p class="legend legend_yes"><%= t('yn.yess') %></p>
						<p class="legend legend_no"><%= t('yn.noo') %></p>
					</div>
				</div>
				<div class="col-md-7">
					<h3><%= t('privacy.by_country') %><a id="by_country_show_all" href="javascript: void(0)" class="disabled"><%= t('privacy.show_all') %></a></h3>
					<div id="bar_graph_by_country" class="bar_graph_horizontal"></div>
				</div>
			</div>
		</div>
	</div>

</div>

